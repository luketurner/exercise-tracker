extends _layout.pug

block content
  h1.title Manage Exercises
  div.grid
    each exercise in exercises
      div.cell
        div.card
          header.card-header
            p.card-header-title= exercise.name
              
          footer.card-footer
            a.card-footer-item(href="/exercises/"+exercise.id) Edit
  form(action="/exercises", method="POST")
    +horizontalField("Exercise name")
      .field
        +control()
          input.input#name(type="text", name="name")
      .field
        +control()
          input.button(type="submit", value="Create new exercise")
