extends _layout.pug

block content
  h1.title Settings
  form(action="/settings", method="POST")
    div.field
      label.label Weight unit
      +control()
        +select(
          "preferredUnits[weight]",
          null,
          user.preferredUnits && user.preferredUnits.weight,
          null,
          [{ id: 'pound', name: 'Pounds' }, { id: 'kg', name: 'Kilograms' }]
        )
    div.field
      label.label Distance unit
      +control()
        +select(
          "preferredUnits[distance]",
          null,
          user.preferredUnits && user.preferredUnits.distance,
          null,
          [{ id: 'mile', name: 'Miles' }, { id: 'km', name: 'Kilometers' }]
        )
    div.field
      div.control
        input.button(type="submit", value="Update")