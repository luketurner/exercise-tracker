{
  "name": "exercise-tracker",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
    "migration:generate": "drizzle-kit generate",
    "migration:run": "drizzle-kit migrate",
    "db:start": "podman start exercise-tracker-db",
    "db:create": "podman run -d -p 5432:5432 --name exercise-tracker-db -e POSTGRES_PASSWORD=foobar postgres",
    "client:dev": "esbuild client/main.js --bundle --outfile=public/main.js --sourcemap --watch --define:PROD=false",
    "client:build": "esbuild client/main.js --bundle --outfile=public/main.js --minify --define:PROD=true",
    "compile": "tsc"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.9",
    "@starfederation/datastar": "^0.21.3",
    "@types/bun": "latest",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.29.1",
    "esbuild": "^0.24.2",
    "tsx": "^4.19.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "better-auth": "^1.1.1",
    "chart.js": "^4.4.7",
    "chartjs-adapter-luxon": "^1.3.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.37.0",
    "express": "^4.21.2",
    "luxon": "^3.5.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.13.1",
    "pug": "^3.0.3",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.1",
    "sortablejs": "^1.15.6",
    "unified": "^11.0.5",
    "zod": "^3.24.2"
  }
}
