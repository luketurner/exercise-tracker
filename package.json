{
  "name": "exercise-tracker",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
    "migration:generate": "drizzle-kit generate",
    "migration:run": "drizzle-kit migrate",
    "db:start": "podman start exercise-tracker-db",
    "db:create": "podman run -d -p 5432:5432 --name exercise-tracker-db -e POSTGRES_PASSWORD=foobar postgres",
    "client:dev": "esbuild client/auth.js --bundle --outfile=public/main.js --sourcemap --watch",
    "client:build": "esbuild client/auth.js --bundle --outfile=public/main.js --minify"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.9",
    "@starfederation/datastar": "^0.21.3",
    "@types/bun": "latest",
    "@types/express": "^5.0.0",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.29.1",
    "esbuild": "^0.24.2",
    "tsx": "^4.19.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "better-auth": "^1.1.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.37.0",
    "express": "^4.21.2",
    "pg": "^8.13.1",
    "pug": "^3.0.3"
  }
}
